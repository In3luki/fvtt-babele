{
    "printWidth": 120,
    "tabWidth": 4,
    "overrides": [
        {
            "files": ["*.json"],
            "options": {
                "trailingComma": "none"
            }
        },
        {
            "files": ["*.scss", "*.css"],
            "options": {
                "requirePragma": false,
                "parser": "scss"
            }
        },
        {
            "files": ["*.yml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.html",
            "options": {
                "requirePragma": false,
                "parser": "html",
                "htmlWhitespaceSensitivity": "ignore"
            }
        }
    ]
}
